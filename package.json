{
  "name": "X-LANDrop",
  "version": "1.0.0",
  "description": "An AirDrop-like application for sharing files between devices on the same network.",
  "main": "./app/server.js",
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "npm install && electron ./app/server.js",
    "pack": "build --dir",
    "dist": "electron-builder -mwl"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Xtrendence/X-LANDrop.git"
  },
  "author": "xtrendence@gmail.com",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Xtrendence/X-LANDrop/issues"
  },
  "homepage": "https://github.com/Xtrendence/X-LANDrop#readme",
  "build": {
    "appId": "com.xtrendence.x-landrop",
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "NSIS",
      "icon": "build/icon.ico"
    }
  },
  "dependencies": {
    "aes-js": "^3.1.2",
    "body-parser": "^1.19.0",
    "chalk": "^3.0.0",
    "crypto": "^1.0.1",
    "ejs": "^3.0.1",
    "evilscan": "^1.7.5",
    "express": "^4.17.1",
    "express-session": "^1.17.0",
    "fs": "0.0.1-security",
    "ip": "^1.1.5",
    "md5": "^2.2.1",
    "node-jsencrypt": "^1.0.0",
    "node-rsa": "^1.0.7",
    "path": "^0.12.7",
    "request": "^2.88.0",
    "sha256": "^0.2.0"
  },
  "devDependencies": {
    "electron": "^18.3.7",
    "electron-builder": "^21.2.0",
    "nodemon": "^2.0.2"
  }
}
